@{
  Layout = "_Layout";
}
@using Library.Models;
@using System.Collections.Generic;
@model Library.Models.Book;

<h2>Book Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Title): @Html.DisplayFor(model => model.Title)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This book does not contain any patrons</p>
}
else
{
  <h4>Patrons the book contains:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Patron.Name</li>
  }
  </ul>
 } 

<p>@Html.ActionLink("Back to list of books", "Index")</p>
<p>@Html.ActionLink("Edit Book", "Edit", new { id = Model.BookId })</p>
<p>@Html.ActionLink("Delete Book", "Delete", new { id = Model.BookId })</p>